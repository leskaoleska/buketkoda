#include <stdio.h>

int main() {
    double a, b, S, P;
    

    printf("Введите длину стороны a: ");
    scanf("%lf", &a);
    
    printf("Введите длину стороны b: ");
    scanf("%lf", &b);
    if (a <= 0 || b <= 0) {
        printf("Ошибка: стороны прямоугольника должны быть положительными числами!\n");
        return 1;
    }
    S = a * b;
    P = 2 * (a + b);
   
    printf("\nРезультаты:\n");
    printf("Площадь прямоугольника S = %.2f\n", S);
    printf("Периметр прямоугольника P = %.2f\n", P);
    
    return 0;
}
